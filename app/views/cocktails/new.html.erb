<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 card-rose-text">
      <div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path('shaker-drink.png') %>">
        <h1 class="text-center">
          <%= @cocktail.name %>
        </h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3 card-rose-text">
        <h1 class="text-center">Add your New Cocktail</h1>
        <%= simple_form_for [@cocktail] do |f| %>
        <%= f.input :name, placeholder: "Give it a name"%>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="text-center">
          <ul> <%= f.submit "Add Cocktail", class: "btn btn-primary" %></ul>
          <ul><%= link_to "Back to Cocktails List", cocktails_path %></ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
